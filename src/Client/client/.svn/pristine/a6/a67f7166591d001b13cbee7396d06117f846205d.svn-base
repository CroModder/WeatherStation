		    							if(dateArray.contains(dateFormat.format(date).toString()) == false){
		    								dateArray.add(dateFormat.format(date).toString());
				    						lineChartData.get(i).getData().add(new XYChart.Data<String, Number>(dateFormat.format(date).toString(),main.getDouble("temp")));
		    							}
	    					}
	    				}
	    				if(test.contains(main.getString("wsName")) == false){
	    					LineChart.Series<String, Number> series = new LineChart.Series<String, Number>();
	    		        	series.getData().add(new XYChart.Data<String, Number>(dateFormat.format(date).toString(),main.getDouble("temp")));
	    		        	series.setName(main.getString("wsName"));
	    		        	test.add(main.getString("wsName"));
	    		        	lineChartData.add(series);
	    		        	graphTemp.setData(lineChartData);
	    		        	
	    				}
	    			}
	        	}
	        }
	    });
    }
    
