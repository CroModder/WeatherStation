	        public void run() {
	        	dateFormat = new SimpleDateFormat("hh:mm:ss");
	        	date = new Date();
	        	if(jsonText != null){
	    			JSONObject main= new JSONObject(jsonText.toString());
	    			if(lineChartData.size() == 0){
	    				LineChart.Series<String, Number> series = new LineChart.Series<String, Number>();
    		        	series.getData().add(new XYChart.Data<String, Number>(dateFormat.format(date).toString(),main.getDouble("temp")));
